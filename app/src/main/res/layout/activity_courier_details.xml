<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourierDetailsActivity">

    <!-- Аватар курьера -->
    <ImageView
        android:id="@+id/imageViewCourierAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Имя курьера -->
    <TextView
        android:id="@+id/textViewCourierName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя Курьера"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageViewCourierAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

    <!-- Фамилия курьера -->
    <TextView
        android:id="@+id/textViewCourierSurName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фамилия Курьера"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewCourierName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <!-- Номер телефона курьера -->
    <TextView
        android:id="@+id/textViewCourierPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Телефон: +7 123 456-78-90"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewCourierSurName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <!-- Номер телефона курьера -->
    <TextView
        android:id="@+id/textViewLicenseCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A, B, C"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewCourierSurName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textViewCourierType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тип курьера: Водитель"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewCourierPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textViewCourierHobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Хобби: Велоспорт"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewCourierType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>
