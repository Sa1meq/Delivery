<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Аватар пользователя -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatarImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.LargeComponent.CornerFull"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar" />

        <!-- Имя -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Имя"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Карточка информации -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Email -->
                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: example@gmail.com"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <!-- Баланс -->
                <TextView
                    android:id="@+id/balanceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Баланс: 0.00"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <!-- Рейтинг -->
                <TextView
                    android:id="@+id/ratingTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Рейтинг: 5.0"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- Тип курьера -->
                <TextView
                    android:id="@+id/typeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Тип курьера: Пеший"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- Телефон -->
                <TextView
                    android:id="@+id/phoneTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Телефон: +7 000 000 00 00"
                    android:paddingBottom="8dp"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <Button
            android:id="@+id/deleteUserButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Удалить пользователя"
            android:visibility="gone"
            android:paddingTop="16dp"/>

        <Button
            android:id="@+id/makeAdminButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Назначить администратором"
            android:visibility="gone"
            android:paddingTop="16dp"/>
        <Button
            android:id="@+id/blockCourierButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заблокировать курьера"
            android:visibility="gone"
            android:paddingTop="16dp"/>

        <Button
            android:id="@+id/updateRatingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменить рейтинг"
            android:visibility="gone"
            android:paddingTop="16dp"/>

        <Button
            android:id="@+id/updateBonusButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменить бонусные баллы"
            android:visibility="gone"
            android:paddingTop="16dp"/>

        <Button
            android:id="@+id/updateEarningsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменить заработок"
            android:visibility="gone"
            android:paddingTop="16dp"/>

    </LinearLayout>
</ScrollView>
