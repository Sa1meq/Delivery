<!-- item_route_order.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/my_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: 0 km" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 0 min" />

        <TextView
            android:id="@+id/order_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: $0.00" />

        <TextView
            android:id="@+id/start_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Address: ..." />

        <TextView
            android:id="@+id/end_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Address: ..." />

        <TextView
            android:id="@+id/order_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: ..." />
    </LinearLayout>
</androidx.cardview.widget.CardView>
