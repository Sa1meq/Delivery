<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_avatar"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/papa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:text=""
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/avatarImage"
        app:layout_constraintStart_toEndOf="@id/avatarImage"
        />

    <TextView
        android:id="@+id/balanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Баланс: "
        app:layout_constraintTop_toBottomOf="@id/papa"
        app:layout_constraintStart_toEndOf="@id/avatarImage"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"/>

    <LinearLayout
        android:id="@+id/optionsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/balanceText"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/exitButton"
        android:paddingTop="15dp">

    <TextView
        android:id="@+id/orderHistoryButton"
        style="@style/ProfileOptionStyle"
        android:text="История заказов"
        android:drawableStart="@drawable/ic_ordershistory"/>

    <TextView
        android:id="@+id/activeOrdersButton"
        style="@style/ProfileOptionStyle"
        android:text="Активные заказы"
        android:drawableStart="@drawable/ic_activeorders"/>

    <TextView
        android:id="@+id/placeOrders"
        style="@style/ProfileOptionStyle"
        android:text="Сделать заказ"
        android:drawableStart="@drawable/ic_place_order"/>

    <TextView
        android:id="@+id/supportButton"
        style="@style/ProfileOptionStyle"
        android:text="Поддержка"
        android:drawableStart="@drawable/ic_supp"/>

    <TextView
        android:id="@+id/rechargeBalanceButton"
        style="@style/ProfileOptionStyle"
        android:text="Пополнить баланс"
        android:drawableStart="@drawable/ic_balance"/>

    <TextView
        android:id="@+id/becomeCourierButton"
        style="@style/ProfileOptionStyle"
        android:text="Стать Минским курьером"
        android:drawableStart="@drawable/ic_gocourier"
        />

    <TextView
        android:id="@+id/aboutServiceButton"
        style="@style/ProfileOptionStyle"
        android:text="О сервисе"
        android:drawableStart="@drawable/ic_info"/>
</LinearLayout>

<TextView
android:id="@+id/exitButton"
style="@style/ProfileOptionStyle"
android:text="Выход"
android:drawableStart="@drawable/ic_exit"
android:gravity="bottom"
app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginBottom="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
